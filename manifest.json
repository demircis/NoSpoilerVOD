{
  "name": "VOD",
  "version": "1.0",
  "description": "Watch VODs without spoilers",
  "manifest_version": 2,
  "permissions": ["storage"],
  "content_scripts": [
    {
    "matches": ["*://www.youtube.com/*"],
    "run_at": "document_start",
    "css": ["youtube.css"],
    "js": ["youtube.js"]
    },
    {
    "matches": ["*://www.twitch.tv/*/videos", "*://www.twitch.tv/videos/*"],
    "css": ["twitch.css"],
    "js": ["jquery/jquery-3.3.1.min.js", "twitch.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "page_action": {
    "default_icon": {
        "16": "images/icon-16x16.png",
        "32": "images/icon-32x32.png",
        "48": "images/icon-48x48.png",
        "128": "images/icon-128x128.png"
    },
    "default_title": "VOD"
  }
}
